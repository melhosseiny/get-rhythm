{
  "name": "postcss-rhythm",
  "version": "0.0.0",
  "description": "PostCSS plugin to apply vertical rhythm and use a modular typographic scale",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "typography",
    "rhythm",
    "modular",
    "scale"
  ],
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci ."
  },
  "author": "Mostafa Elshamy <melhosseiny@users.noreply.github.com>",
  "license": "MIT",
  "repository": "melhosseiny/postcss-rhythm",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.1.0"
  },
  "devDependencies": {
    "clean-publish": "^1.1.8",
    "eslint": "^7.10.0",
    "eslint-ci": "^1.0.0",
    "eslint-plugin-jest": "^24.0.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-ci": "^0.1.1",
    "jest-cli": "^26.4.2",
    "lint-staged": "^10.4.0",
    "postcss": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
